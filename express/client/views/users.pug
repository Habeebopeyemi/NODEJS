//- this uses html 5 template

extends layouts/main-layout.pug

block content
        main
            if register.length > 0 
                .grid
                    each user in register
                        article.card.product-item
                            header.card__header
                                h1.product__title #{user.title}
                            .card__image
                                img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A user")
                            .card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting things!
                            .card__actions
                                button.btn Add to Registry
            else
                h1 No users currently